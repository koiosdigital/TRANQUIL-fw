menu "STUSB4500 USB-C PD Controller"
    
    config STUSB4500_ENABLE
        bool "Enable STUSB4500 USB-C PD Controller"
        default y
        help
            Enable the STUSB4500 USB-C Power Delivery controller support.

    menu "I2C Configuration"
        depends on STUSB4500_ENABLE

        config STUSB4500_I2C_PORT
            int "I2C Port Number"
            default 0
            range 0 1
            help
                I2C port number for STUSB4500 communication (0 or 1)

        config STUSB4500_SDA_PIN
            int "I2C SDA Pin"
            default 21
            range 0 48
            help
                GPIO pin for I2C SDA (data) line

        config STUSB4500_SCL_PIN
            int "I2C SCL Pin"
            default 22
            range 0 48
            help
                GPIO pin for I2C SCL (clock) line

        config STUSB4500_I2C_ADDR
            hex "STUSB4500 I2C Address"
            default 0x28
            range 0x08 0x77
            help
                I2C slave address for the STUSB4500 chip (default 0x28)

        config STUSB4500_I2C_FREQ_HZ
            int "I2C Clock Frequency (Hz)"
            default 100000
            range 10000 400000
            help
                I2C clock frequency in Hz (100kHz recommended)

        config STUSB4500_I2C_TIMEOUT_MS
            int "I2C Transaction Timeout (ms)"
            default 1000
            range 100 5000
            help
                Timeout for I2C transactions in milliseconds

    endmenu

    menu "Power Delivery Configuration"
        depends on STUSB4500_ENABLE

        config STUSB4500_MONITOR_INTERVAL_MS
            int "Status Monitor Interval (ms)"
            default 100
            range 50 1000
            help
                How often to check negotiation status in milliseconds

        config STUSB4500_DEBUG_ENABLE
            bool "Enable Debug Logging"
            default n
            help
                Enable detailed debug logging for STUSB4500 operations

    endmenu

endmenu
